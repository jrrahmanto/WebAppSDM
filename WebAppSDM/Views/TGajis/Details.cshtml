@model WebAppSDM.Models.ViewGaji

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Forms/</span> Detail</h4>

    <!-- Basic Layout & Basic with Icons -->
    <div class="row">
        <!-- Basic Layout -->
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-body">
                    <table border="0" width="100%">
                        <tr>
                            <td width="10%">
                                @Html.DisplayNameFor(model => model.Nama)
                            </td>
                            <td>
                                : @Html.DisplayFor(model => model.Nama)
                            </td>

                            <td width="10%">
                                @Html.DisplayNameFor(model => model.NIP)
                            </td>
                            <td>
                                : @Html.DisplayFor(model => model.NIP)
                            </td>
                        </tr>
                        <tr>
                            <td width="10%">
                                Tahun
                            </td>
                            <td>
                                : @Html.DisplayFor(model => model.periode_year)
                            </td>

                            <td width="10%">
                                Bulan
                            </td>
                            <td>
                                : @Html.DisplayFor(model => model.periode_month)
                            </td>
                        </tr>
                    </table>
                    <hr />
                    <table border="1" width="100%">
                        <tr>
                            <td width="15%">
                                Gapok
                            </td>
                            <td>
                                : @Html.DisplayFor(model => model.Gapok)
                            </td>
                        </tr>
                        <tr>
                            <td width="15%">
                                Tunj Tetap
                            </td>
                            <td>
                                : @Html.DisplayFor(model => model.tunjangan_tetap)
                            </td>
                        </tr>
                        <tr>
                            <td width="20%">
                                Tunj Harian
                            </td>
                            <td>
                                : @Html.DisplayFor(model => model.tunjangan_harian)
                            </td>
                        </tr>
                        <tr>
                            <td width="20%">
                                Tunj Lainnya
                            </td>
                            <td>
                                : @Html.DisplayFor(model => model.tunjangan_lain)
                            </td>
                        </tr>
                        <tr>
                            <td width="20%">
                                BPJS KS
                            </td>
                            <td>
                                : @Html.DisplayFor(model => model.bpjs_ks)
                            </td>
                        </tr>
                        <tr>
                            <td width="20%">
                                BPJS TK
                            </td>
                            <td>
                                : @Html.DisplayFor(model => model.bpjs_tk)
                            </td>
                        </tr>
                        <tr>
                            <td width="20%">
                                DPLK
                            </td>
                            <td>
                                : @Html.DisplayFor(model => model.dplk)
                            </td>
                        </tr>
                        <tr>
                            <td width="20%">
                                PPH 21
                            </td>
                            <td>
                                : @Html.DisplayFor(model => model.pph21)
                            </td>
                        </tr>
                        <tr>
                            <td width="20%">
                                Potongan Koperasi
                            </td>
                            <td>
                                : @Html.DisplayFor(model => model.potongan_koperasi)
                            </td>
                        </tr>
                        <tr>
                            <td width="20%">
                                Potongan Lainnya
                            </td>
                            <td>
                                : @Html.DisplayFor(model => model.potongan_lain)
                            </td>
                        </tr>
                        <tr>
                            <td width="20%">
                                THP 1
                            </td>
                            <td>
                                : @Html.DisplayFor(model => model.thp1)
                            </td>
                        </tr>
                        <tr>
                            <td width="20%">
                                THP 2
                            </td>
                            <td>
                                : @Html.DisplayFor(model => model.thp2)
                            </td>
                        </tr>
                        <tr>
                            <td width="20%">
                                Total Upah
                            </td>
                            <td>
                                : @Html.DisplayFor(model => model.nominal_upah)
                            </td>
                        </tr>
                       
                        <tr>
                            <td width="20%">
                                Update Date
                            </td>
                            <td>
                                : @Html.DisplayFor(model => model.update_date)
                            </td>
                        </tr>
                    </table>
                    <br />
                    <a asp-action="Edit" asp-controller="TGajis" asp-route-id="@Model?.id" class="btn btn-primary">Edit</a>
                    <a asp-action="Index" class="btn btn-danger">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>
