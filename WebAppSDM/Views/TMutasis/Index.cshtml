@model IEnumerable<WebAppSDM.Models.TMutasi>

@if (TempData["ResultOk"] != null)
{
    <h1 class="card-header">@TempData["ResultOk"]</h1>
}

<script type="text/javascript">
    $(document).ready(function () {
        $.noConflict();
        $('#myDataTable').DataTable({});
    });
</script>

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Transaksi/</span>Mutasi</h4>
    <!-- Basic Bootstrap Table -->
    <div class="card">
        <h5 class="card-header"> <a asp-action="Create" class="btn btn-sm btn-outline-primary">Create</a></h5>
        <div class="card-header">
            <table class="table" id="myDataTable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.NIP)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.grade_old)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.grade_new)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.jabatan_old)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.jabatan_new)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.date_mutasi)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.no_sk)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.keterangan)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.isdelete)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.createdate)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.NIP)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.grade_old)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.grade_new)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.jabatan_old)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.jabatan_new)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.date_mutasi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.no_sk)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.keterangan)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.isdelete)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.createdate)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>