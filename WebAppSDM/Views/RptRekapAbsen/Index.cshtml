@model IEnumerable<WebAppSDM.Models.ViewMTunjanganPerson>
@{
    var Divisi = (List<MDivisi>)ViewData["DivisiList"];
}
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Report/</span>Report Absen</h4>
    <!-- Basic Bootstrap Table -->
    <div class="card">
        <div class="card-header">
            <h5 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Rekap Absensi</span></h5>
            <div class="col-xxl">
                <div class="card mb-4">
                    <div class="card-body">
                        <form action="" method="post">
                            <div class="row mb-3">
                                <div class="col-sm-2">
                                    Nama
                                    <select name="id" id="id" class="form-control" required>
                                        @foreach (var item in Divisi)
                                        {
                                            <option value="@item.id">@item.divisi_name</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-sm-2">
                                    Periode Start
                                    <input type="date" class="form-control" id="periodestart" name="periodestart" />
                                </div>
                                <div class="col-sm-2">
                                    Periode End
                                    <input type="date" class="form-control" id="periodeend" name="periodeend" />
                                </div>
                                <div class="col-sm-5">
                                    <br />
                                    <input type="submit" value="Cetak" class="btn btn-info" asp-action="ReportRekapAbsen" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>