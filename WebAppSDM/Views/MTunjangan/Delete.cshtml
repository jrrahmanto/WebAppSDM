@model MTunjangan
@{
    var GradeList = (List<DropdownList.GradeList>)ViewData["GradeList"];
    var JabatanList = (List<DropdownList.JabatanList>)ViewData["JabatanList"];
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Forms/</span>Edit Master Tunjangan</h4>

    <!-- Basic Layout & Basic with Icons -->
    <div class="row">
        <!-- Basic Layout -->
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-body">
                    <form method="post" asp-action="DeleteTunjangan">
                        <input type="date" class="form-control" asp-for="create_date" required hidden="hidden" />
                        <input type="text" class="form-control" asp-for="id" required hidden="hidden" />
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-name">Kode Tunjangan</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" asp-for="kode_tunjangan" readonly="readonly"/>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-company">Nama Tunjangan</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" asp-for="nama_tunjangan" readonly="readonly" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-company">Nominal</label>
                            <div class="col-sm-10">
                                <input type="number" class="form-control" asp-for="nominal" readonly="readonly" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-company">Grade</label>
                            <div class="col-sm-10">
                                <select asp-for="grade" class="form-control" readonly="readonly">
                                    <option value="99999">-</option>
                                    @foreach (var item in GradeList)
                                    {
                                        <option value="@item.id">@item.nama</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-company">Jabatan</label>
                            <div class="col-sm-10">
                                <select asp-for="jabatan" class="form-control" readonly="readonly">
                                    <option value="99999">-</option>
                                    @foreach (var item in JabatanList)
                                    {
                                        <option value="@item.id">@item.nama</option>
                                    }
                                </select>
                            </div>
                        </div>


                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-company">Daily (Yes/No)</label>
                            <div class="col-sm-10">
                                <div class="form-check d-flex">
                                    <input class="form-check-input" type="checkbox" asp-for="daily" readonly="readonly" />
                                    <span class="text-muted fw-light">&nbsp;Apakah di hitung harian</span>
                                </div>
                            </div>
                        </div>

                        <div class="row justify-content-end">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary">Delete</button>
                                <a asp-controller="MTunjangan" asp-action="Index" class="btn btn-lg btn-danger p-2">Back</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>