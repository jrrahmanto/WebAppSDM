@model WebAppSDM.Models.MMesinAbsen
@{
    var KaryawanList = (List<DropdownList.KaryawanList>)ViewData["KaryawanList"];
}
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Forms/</span> Edit Mesin Absen</h4>
    <!-- Basic Layout & Basic with Icons -->
    <div class="row">
        <!-- Basic Layout -->
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="id" />
                        <div class="form-group">
                            <label asp-for="id_mechine" class="control-label"></label>
                            <input asp-for="id_mechine" class="form-control" />
                            <span asp-validation-for="id_mechine" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="badge_number" class="control-label"></label>
                            <input asp-for="badge_number" class="form-control" />
                            <span asp-validation-for="badge_number" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NIP" class="control-label"></label>
                            <select asp-for="NIP" class="form-control" required>
                                @foreach (var item in KaryawanList)
                                {
                                    <option value="@item.NIP">@item.nama</option>
                                }
                            </select>
                        </div>
                        <br />
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a asp-controller="MMesinAbsen" asp-action="Index" class="btn btn-lg btn-danger p-2">Back</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

