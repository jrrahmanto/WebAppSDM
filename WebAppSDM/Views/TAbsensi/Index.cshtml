@model IEnumerable<ViewTAbsensi>

@if (TempData["ResultOk"] != null)
{
    <h1 class="card-header">@TempData["ResultOk"]</h1>
}

<script type="text/javascript">
    $(document).ready(function () {
        $.noConflict();
        $('#myDataTable').DataTable({});
    });
</script>

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Transaksi/</span>Absensi</h4>
    <!-- Basic Bootstrap Table -->
    <div class="card">

        <div class="card-header">

            <table class="table" id="myDataTable">
                <thead>
                    <tr>
                        <th>Nama</th>
                        <th>Periode</th>
                        <th>Jam Masuk</th>
                        <th>Jam Pulang</th>
                        <th>Lembur</th>
                        <th>Keterangan</th>
                        <th>Hitung Lembur</th>
                        <th>Nominal Lembur</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.nama</td>
                            <td>@item.update_date.ToString("dd/MM/yyyy")</td>
                            <td>@item.Jam_Masuk.ToString("HH:mm:ss")</td>
                            <td>@item.Jam_Keluar.ToString("HH:mm:ss")</td>
                            <td>@item.Lembur</td>
                            <td>@item.Status</td>
                            <td>
                                @if (item.Hitung_Lembur == true)
                                {
                                    <span class="badge bg-label-primary me-1">Yes</span>
                                }
                                else
                                {
                                    <span class="badge bg-label-danger me-1">No</span>
                                }
                            </td>
                            <td>@String.Format("{0:n}", item.Nominal_Lembur)</td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-controller="TAbsensi" asp-action="Edit" asp-route-id="@item.id"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>