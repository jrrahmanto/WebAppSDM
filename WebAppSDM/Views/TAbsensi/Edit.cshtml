@model TAbsensi

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Forms/</span> Edit Absensi</h4>

    <!-- Basic Layout & Basic with Icons -->
    <div class="row">
        <!-- Basic Layout -->
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-body">
                    <form method="post" asp-action="Edit">
                        <input type="text" class="form-control" asp-for="id" required hidden="hidden" />
                        <input type="text" class="form-control" asp-for="NIP" required hidden="hidden" />
                        <input type="datetime-local" class="form-control" asp-for="update_date" required hidden="hidden" />
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-name">Jam Masuk</label>
                            <div class="col-sm-10">
                                <input type="datetime-local" class="form-control" asp-for="Jam_Masuk" required />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-company">Jam Pulang</label>
                            <div class="col-sm-10">
                                <input type="datetime-local" class="form-control" asp-for="Jam_Keluar" required />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-email">Keterangan</label>
                            <div class="col-sm-10">
                                <div class="input-group input-group-merge">
                                    <input type="text" class="form-control" asp-for="Status" />
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-company">Hitung Lembur (Yes/No)</label>
                            <div class="col-sm-10">
                                <div class="form-check d-flex">
                                    <input class="form-check-input" type="checkbox" asp-for="Hitung_Lembur" />
                                    <span class="text-muted fw-light">&nbsp;Apakah di hitung lembur</span>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-email">Nominal Lembur</label>
                            <div class="col-sm-10">
                                <div class="input-group input-group-merge">
                                    <input type="text" class="form-control" asp-for="Nominal_Lembur" required />
                                </div>
                            </div>
                        </div>
                        <div class="row justify-content-end">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary">Save</button>
                                <a asp-controller="TAbsensi" asp-action="Index" class="btn btn-lg btn-danger p-2">Back</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>