@model TAbsensi

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Forms/</span> Edit Absensi</h4>

    <!-- Basic Layout & Basic with Icons -->
    <div class="row">
        <!-- Basic Layout -->
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-body">
                    <form method="post" asp-action="Edit">
                        <input type="text" class="form-control" asp-for="id" required hidden="hidden" />
                        <input type="text" class="form-control" asp-for="NIP" required hidden="hidden" />
                        <input type="datetime-local" class="form-control" asp-for="update_date" required hidden="hidden" />
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-name">Jam Masuk</label>
                            <div class="col-sm-10">
                                <input type="datetime-local" class="form-control" asp-for="Jam_Masuk" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-company">Jam Pulang</label>
                            <div class="col-sm-10">
                                <input type="datetime-local" class="form-control" asp-for="Jam_Keluar" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-company">Keterangan</label>
                            <div class="col-sm-10">
                                <select asp-for="keterangan" class="form-select">
                                    <option value="-">-</option>
                                    <option value="sakit">Sakit</option>
                                    <option value="Danareksa">Danareksa</option>
                                    <option value="cuti tahunan">Cuti Tahunan</option>
                                    <option value="cuti besar">Cuti Besar</option>
                                    <option value="gathering">Gathering</option>
                                    <option value="Dinas">Dinas</option>
                                    <option value="Pelatihan">Pelatihan</option>
                                    <option value="Mobile/Flexitime">Mobile/Flexitime</option>
                                    <option value="WFH">WFH</option>
                                    <option value="EOD">EOD</option>
                                    <option value="piket">Piket</option>
                                    <option value="Lain-Lain">Lain lain</option>
                                </select>
                            </div>
                        </div>
                      @*  <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-email">Keterangan</label>
                            <div class="col-sm-10">
                                <div class="input-group input-group-merge">
                                    <input type="text" class="form-control" asp-for="keterangan" placeholder="cuti/dinas luar/sakit" />
                                </div>
                            </div>
                        </div>*@
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-company">Status</label>
                            <div class="col-sm-10">
                                <select asp-for="Status" class="form-select">
                                    <option value="masuk">Masuk</option>
                                    <option value="tidak masuk">Tidak Masuk</option>
                                    <option value="terlambat">Terlambat</option>
                                </select>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-company">Hitung Lembur ?</label>
                            <div class="col-sm-10">
                                <div class="form-check d-flex">
                                    <input class="form-check-input" type="checkbox" asp-for="Hitung_Lembur" />
                                    <span class="text-muted fw-light">&nbsp;Apakah di hitung lembur</span>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-email">Nominal Lembur</label>
                            <div class="col-sm-10">
                                <div class="input-group input-group-merge">
                                    <input type="text" class="form-control" asp-for="Nominal_Lembur" required />
                                </div>
                            </div>
                        </div>
                        <div class="row justify-content-end">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary">Save</button>
                                <a asp-controller="TAbsensi" asp-action="Index" class="btn btn-lg btn-danger p-2">Back</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>