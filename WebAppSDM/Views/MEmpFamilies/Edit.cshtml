@model WebAppSDM.Models.MEmpFamily
@{
    var KaryawanList = (List<DropdownList.KaryawanList>)ViewData["KaryawanList"];
}
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Forms/</span> Edit Keluarga</h4>

    <!-- Basic Layout & Basic with Icons -->
    <!-- Basic Layout & Basic with Icons -->
    <div class="row">
        <!-- Basic Layout -->
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-body">

                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="fam_id" />
                        <input type="hidden" asp-for="isdelete" />
                        <input type="hidden" asp-for="createddate" />
                        <div class="form-group">
                            <label class="control-label">Nama Karyawan</label>
                            <select asp-for="nip" class="form-control" required>
                                @foreach (var item in KaryawanList)
                                {
                                    <option value="@item.NIP">@item.nama</option>
                                }
                            </select>
                            <span asp-validation-for="nip" class="text-danger"></span>
                        </div>
                         <div class="form-group">
                            <label class="control-label">Hubungan</label>
                            <input asp-for="fam_relationship" class="form-control" required/>
                            <span asp-validation-for="fam_relationship" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Nama keluarga</label>
                            <input asp-for="fam_name" class="form-control" required />
                            <span asp-validation-for="fam_name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Jenis Kelamin</label>
                            <select asp-for="fam_sex" class="form-control" required>
                                <option value="1">Laki laki</option>
                                <option value="0">Perempuan</option>
                            </select>
                            <span asp-validation-for="fam_sex" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Tempat Lahir</label>
                            <input asp-for="fam_pob" class="form-control" required />
                            <span asp-validation-for="fam_pob" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Tanggal Lahir</label>
                            <input asp-for="fam_dob" type="date" class="form-control" required />
                            <span asp-validation-for="fam_dob" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">NIK (Kosongkan jika tidak ada)</label>
                            <input asp-for="fam_KTP" class="form-control" />
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a asp-action="Index" class="btn btn-lg btn-danger p-2">Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
