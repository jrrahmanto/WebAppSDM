@model WebAppSDM.Models.TDivisi
@{
    var KaryawanList = (List<DropdownList.KaryawanList>)ViewData["KaryawanList"];
    var DivisiList = (List<MDivisi>)ViewData["DivisiList"];
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Forms/</span> Create Divisi</h4>

    <!-- Basic Layout & Basic with Icons -->
    <div class="row">
        <!-- Basic Layout -->
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label class="control-label">Divisi</label>
                            <select asp-for="id_divisi" class="form-control" required>
                                @foreach (var item in DivisiList)
                                {
                                    <option value="@item.id">@item.divisi_name</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Nama</label>
                            <select asp-for="nip" class="form-control" required>
                                @foreach (var item in KaryawanList)
                                {
                                    <option value="@item.NIP">@item.nama</option>
                                }
                            </select>
                        </div>
                        <br />
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a asp-controller="TDivisis" asp-action="Index" class="btn btn-lg btn-danger p-2">Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

