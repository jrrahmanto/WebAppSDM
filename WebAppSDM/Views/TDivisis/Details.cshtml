@model IEnumerable<WebAppSDM.Models.TDivisiDetail>
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    string role = HttpContextAccessor.HttpContext.Session.GetString("role");
}
@if (TempData["ResultOk"] != null)
{
    <h1 class="card-header">@TempData["ResultOk"]</h1>
}

<script type="text/javascript">
    $(document).ready(function () {
        $.noConflict();
        $('#myDataTable').DataTable({});
    });
</script>
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Daftar </span>@Model.FirstOrDefault().divisi_name</h4>
    <!-- Basic Bootstrap Table -->
    <div class="card">

        <h5 class="card-header"> <a asp-action="index" class="btn btn-sm btn-outline-primary">Beck</a></h5>
        <div class="card-header">

            <table class="table" id="myDataTable">
                <thead>
                    <tr>
                        <th>
                            Nama Karyawan
                        </th>
                        <th>
                            NIP
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.nama
                            </td>
                            <td>
                                @item.nip
                            </td>
                            @if (role == "1")
                            {
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                                    <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
                                </td>
                            }else
                            {
                                <td></td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>