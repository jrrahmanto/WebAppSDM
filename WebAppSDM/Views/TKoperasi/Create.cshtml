@model TKoperasi
@{
    var KaryawanList = (List<DropdownList.KaryawanList>)ViewData["KaryawanList"];
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Forms/</span>Create Koperasi</h4>

    <!-- Basic Layout & Basic with Icons -->
    <div class="row">
        <!-- Basic Layout -->
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-body">
                    <form method="post">
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-company">Nama</label>
                            <div class="col-sm-10">
                                <select asp-for="NIP" class="form-control" required>
                                    @foreach (var item in KaryawanList)
                                    {
                                        <option value="@item.NIP">@item.nama</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-company">Tahun Periode</label>
                            <div class="col-sm-10">
                                <select asp-for="Periode_year" class="form-control" required>
                                    @for (int i = 2022; i < 2030; i++)
                                    {
                                        <option value="@i">@i</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-company">Bulan Periode</label>
                            <div class="col-sm-10">
                                <select asp-for="Periode_month" class="form-control" required>
                                    <option value="Januari">Januari</option>
                                    <option value="Februari">Februari</option>
                                    <option value="Maret">Maret</option>
                                    <option value="April">April</option>
                                    <option value="Mei">Mei</option>
                                    <option value="Juni">Juni</option>
                                    <option value="Juli">Juli</option>
                                    <option value="Agustus">Agustus</option>
                                    <option value="September">September</option>
                                    <option value="Oktober">Oktober</option>
                                    <option value="November">November</option>
                                    <option value="Desember">Desember</option>
                                </select>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-name">Cicilan</label>
                            <div class="col-sm-10">
                                <input type="number" class="form-control" asp-for="Cicilan" pattern="^\d+(?:\.\d{1,2})?$" min="0" step="0.01" required />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-company">Tabungan</label>
                            <div class="col-sm-10">
                                <input type="number" class="form-control" asp-for="Tabungan" pattern="^\d+(?:\.\d{1,2})?$" required />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-company">Iuran</label>
                            <div class="col-sm-10">
                                <input type="number" class="form-control" asp-for="Iuran" pattern="^\d+(?:\.\d{1,2})?$" required />
                            </div>
                        </div>

                        <div class="row justify-content-end">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary">Save</button>
                                <a asp-controller="TKoperasi" asp-action="Index" class="btn btn-lg btn-danger p-2">Back</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>