@model WebAppSDM.Models.TAbsenKhusus

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var KaryawanList = (List<DropdownList.KaryawanList>)ViewData["KaryawanList"];
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Absen/</span>Edit Absen Khusus</h4>

    <!-- Basic Layout & Basic with Icons -->
    <div class="row">
        <!-- Basic Layout -->
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="id" />
                        <div class="form-group">
                            <label class="control-label">Nama</label>
                            <select asp-for="nip" class="form-control" required>
                                <option value="999">all</option>
                                @foreach (var item in KaryawanList)
                                {
                                    <option value="@item.NIP">@item.nama</option>
                                }
                            </select>
                            <span asp-validation-for="nip" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="periode_start" class="control-label"></label>
                            <input asp-for="periode_start" type="date" class="form-control" />
                            <span asp-validation-for="periode_start" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="periode_end" class="control-label"></label>
                            <input asp-for="periode_end" type="date" class="form-control" />
                            <span asp-validation-for="periode_end" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Status</label><br />
                            <input class="form-check-input" type="radio" asp-for="status" value="1" /> Di Perhitungkan Sebagai Masuk<br />
                            <input class="form-check-input" type="radio" asp-for="status" value="0" /> <lable style="color:red">Di Perhitungkan Sebagai Tidak Masuk</lable>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 col-form-label" for="basic-default-company">Keterangan</label>
                            <input asp-for="keterangan" type="text" class="form-control" />
                            <span asp-validation-for="keterangan" class="text-danger"></span>
                            @* <select asp-for="keterangan" class="form-select">
                            <option value="-">-</option>
                            <option value="sakit">Sakit</option>
                            <option value="Danareksa">Danareksa</option>
                            <option value="cuti tahunan">Cuti Tahunan</option>
                            <option value="cuti besar">Cuti Besar</option>
                            <option value="gathering">Gathering</option>
                            <option value="Dinas">Dinas</option>
                            <option value="Pelatihan">Pelatihan</option>
                            <option value="Mobile/Flexitime">Mobile/Flexitime</option>
                            <option value="WFH">WFH</option>
                            <option value="EOD">EOD</option>
                            <option value="piket">Piket</option>
                            <option value="Kick Of Meeting">Kick Of Meeting</option>
                            <option value="Lain-Lain">Lain lain</option>
                            </select>*@
                        </div>
                        <br />
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-lg btn-danger p-2">Back</a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>

</div>

