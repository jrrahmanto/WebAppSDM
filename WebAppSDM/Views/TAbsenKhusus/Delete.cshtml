@model WebAppSDM.Models.TAbsenKhusus

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Are you sure you want to delete this ?</h4>

    <!-- Basic Layout & Basic with Icons -->
    <div class="row">
        <!-- Basic Layout -->
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-body">

                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.nip)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.nip)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.periode_start)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.periode_start)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.periode_end)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.periode_end)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.keterangan)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.keterangan)
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="id" />
                        <input type="submit" value="Delete" class="btn btn-danger" /> 
                        <a asp-action="Index" class="btn btn-lg btn-success p-2">Back</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
