@model IEnumerable<WebAppSDM.Models.ViewMTunjanganPerson>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        $.noConflict();
        $('#myDataTable').DataTable({
            order: [1, 'asc']
        });
    });
</script>

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Tunjangan/</span>Spesifik Pegawai</h4>
    <!-- Basic Bootstrap Table -->
    <div class="card">
        <h5 class="card-header"> <a href="MTunjanganPersons/Create" class="btn btn-sm btn-outline-primary">Create</a></h5>
        <div class="card-header">

            <table class="table" id="myDataTable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.nama)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.nama_tunjangan)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.nominal)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.nama)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nama_tunjangan)
                            </td>
                            <td>
                                @String.Format("{0:n}", item.nominal)
                            </td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-action="Edit"  asp-route-id="@item.id"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                        <a class="dropdown-item" asp-action="Delete" asp-route-id="@item.id"><i class="bx bx-trash me-1"></i> Delete</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
