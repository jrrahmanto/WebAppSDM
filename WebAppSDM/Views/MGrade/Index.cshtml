@model IEnumerable<MGrade>

@if (TempData["ResultOk"] != null)
{
    <h1 class="card-header">@TempData["ResultOk"]</h1>
}

<script src="~/DataTables/jquery-3.6.0.min.js"></script>
<script type="text/javascript" charset="utf8" src="~/DataTables/DataTables-1.11.3/js/jquery.dataTables.min.js"></script>
<link rel="stylesheet" type="text/css" href="~/DataTables/DataTables-1.11.3/css/jquery.dataTables.min.css">


<script type="text/javascript">
        debugger;
        $('#table_id').DataTable();
</script>
<div class="container-xxl flex-grow-1 container-p-y">
    <!-- Basic Bootstrap Table -->
    <div class="card">
        <h5 class="card-header"> <a href="MGrade/Create" class="btn btn-sm btn-outline-primary">Create</a></h5>
        <div class="table-responsive text-nowrap">

            <table class="table" id="table_id">
                <thead>
                    <tr>
                        <th>Kode Grade</th>
                        <th>Grade</th>
                        <th>Nama Grade</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        if (item.isdelete == 0)
                        {
                            <tr>
                                <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.kode_grade</strong></td>
                                <td>@item.grade</td>
                                <td>@item.nama_grade</td>
                                <td>
                                    <div class="dropdown">
                                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                            <i class="bx bx-dots-vertical-rounded"></i>
                                        </button>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" asp-controller="MGrade" asp-action="Edit" asp-route-id="@item.Id"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                            <a class="dropdown-item" asp-controller="MGrade" asp-action="Delete" asp-route-id="@item.Id"><i class="bx bx-trash me-1"></i> Delete</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>