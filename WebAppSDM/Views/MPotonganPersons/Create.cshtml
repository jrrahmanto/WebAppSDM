@model WebAppSDM.Models.MPotonganPerson
@{
    var KaryawanList = (List<DropdownList.KaryawanList>)ViewData["KaryawanList"];
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Forms/</span> Create Potongan</h4>

    <!-- Basic Layout & Basic with Icons -->
    <div class="row">
        <!-- Basic Layout -->
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label class="control-label">Nama</label>
                            <select asp-for="nip" class="form-control" required>
                                @foreach (var item in KaryawanList)
                                {
                                    <option value="@item.NIP">@item.nama</option>
                                }
                            </select>
                            <span asp-validation-for="nip" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="tvs" class="control-label"></label>
                            <select asp-for="tvs" class="form-control" required>
                                <option value="a1">A1</option>
                                <option value="a2">A2</option>
                                <option value="a3">A3</option>
                                <option value="a4">A4</option>
                                <option value="a5">A5</option>
                            </select>
                            <span asp-validation-for="tvs" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="potongan_parkiran" class="control-label"></label>
                            <input asp-for="potongan_parkiran" type="number" class="form-control" required />
                            <span asp-validation-for="potongan_parkiran" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="potongan_dim" class="control-label"></label>
                            <input asp-for="potongan_dim" type="number" class="form-control" required />
                            <span asp-validation-for="potongan_dim" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="potongan_lain" class="control-label"></label>
                            <input asp-for="potongan_lain" type="number" class="form-control" required />
                            <span asp-validation-for="potongan_lain" class="text-danger"></span>
                        </div>
                        <hr />
                        <div class="form-group">
                            <label asp-for="dplk" class="control-label"></label><br />
                            <input class="form-check-input" type="checkbox" asp-for="dplk" /> Ya/Tidak
                            <span asp-validation-for="dplk" class="text-danger"></span>
                        </div>
                        <hr />
                        <div class="form-group">
                            <label asp-for="periode" class="control-label"></label>
                            <select asp-for="periode" class="form-control" required>
                                <option value="januari">Januari</option>
                                <option value="februari">Februari</option>
                                <option value="maret">Maret</option>
                                <option value="april">April</option>
                                <option value="mei">Mei</option>
                                <option value="juni">juni</option>
                                <option value="juli">Juli</option>
                                <option value="agustus">Agustus</option>
                                <option value="september">September</option>
                                <option value="oktober">Oktober</option>
                                <option value="november">November</option>
                                <option value="desember">Desember</option>
                            </select>
                            <span asp-validation-for="periode" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="potongan_koperasi" class="control-label"></label>
                            <input asp-for="potongan_koperasi" type="number" class="form-control" required/>
                            <span asp-validation-for="potongan_koperasi" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" /> |
                            <a asp-action="Index">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>